				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Button Grid.Row="0" Grid.Column="0" Margin="10,5" Tag="1" Click="Button_Click">Test 1</Button>
			<Button Grid.Row="0" Grid.Column="1" Margin="10,5" Tag="2" Click="Button_Click">Test 2</Button>
			<Button Grid.Row="0" Grid.Column="2" Margin="10,5" Tag="3" Click="Button_Click">Test 3</Button>
			<Button Grid.Row="0" Grid.Column="3" Margin="10,5" Tag="4" Click="Button_Click">Test 4</Button>
			<Button Grid.Row="0" Grid.Column="4" Margin="10,5" Tag="5" Click="Button_Click">Test 5</Button>
			<Button Grid.Row="1" Grid.Column="0" Margin="10,5" Tag="6" Click="Button_Click">Test 6</Button>
			<Button Grid.Row="1" Grid.Column="1" Margin="10,5" Tag="7" Click="Button_Click">Test 7</Button>
			<Button Grid.Row="1" Grid.Column="2" Margin="10,5" Tag="8" Click="Button_Click">Test 8</Button>
			<Button Grid.Row="1" Grid.Column="3" Margin="10,5" Tag="9" Click="Button_Click">Test 9</Button>
			<Button Grid.Row="1" Grid.Column="4" Margin="10,5" Tag="10" Click="Button_Click">Test 10</Button>
			<Button Grid.Row="2" Grid.Column="0" Margin="10,5" Tag="11" Click="Button_Click">Test 11</Button>
			<Button Grid.Row="2" Grid.Column="1" Margin="10,5" Tag="12" Click="Button_Click">Test 12</Button>
			<Button Grid.Row="2" Grid.Column="2" Margin="10,5" Tag="13" Click="Button_Click">Test 13</Button>
			<Button Grid.Row="2" Grid.Column="3" Margin="10,5" Tag="14" Click="Button_Click">Test 14</Button>
			<Button Grid.Row="2" Grid.Column="4" Margin="10,5" Tag="15" Click="Button_Click">Test 15</Button>
		</Grid>

