  <ItemGroup>
    <ProjectReference Include="..\Utility.NET\Utility.NET.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Controls\MediaTimeline.xaml">
      <Generator>MSBuild:Compile</Generator>
