<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:JLR.Utility.WinUI.Controls"
    xmlns:win2d="using:Microsoft.Graphics.Canvas.UI.Xaml">

    <ControlTemplate x:Key="LogElementDefaultTemplate" TargetType="controls:LogElement">
        <Border Background="Transparent"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="{TemplateBinding CornerRadius}"
                Padding="0">
            <win2d:CanvasControl x:Name="PART_Canvas"
                                 ClearColor="{TemplateBinding Background}"/>
        </Border>
    </ControlTemplate>
    
    <Style TargetType="controls:LogElement">
        <Setter Property="Background" Value="Black"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Template" Value="{StaticResource LogElementDefaultTemplate}"/>
    </Style>
</ResourceDictionary>